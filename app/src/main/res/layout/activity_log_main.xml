<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableRow android:layout_width="match_parent"
        android:gravity="center" android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="BUP MFS"
            android:textAlignment="center"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="30sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="20dip" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginscreen_username"
            android:padding="20dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:hint="Username"
            android:textColorHint="#cccccc"
            android:background="@android:drawable/editbox_background"
            android:drawableLeft="@android:drawable/ic_menu_crop"
            android:layout_weight="1"
            android:singleLine="true">
        </EditText>
    </TableRow>

    <TableRow android:layout_marginTop="20dip" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginscreen_password"
            android:padding="20dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:hint="Password"
            android:textColorHint="#cccccc"
            android:background="@android:drawable/editbox_background"
            android:drawableLeft="@android:drawable/ic_lock_lock"
            android:layout_weight="1"
            android:password="true"
            android:singleLine="true">
        </EditText>
    </TableRow>


    <TableRow android:paddingTop="10px" android:gravity="center">
        <Button
            android:id="@+id/button_CreateUser"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_span="2"
            android:text="Create User"
            android:textColor="#890000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <!--<TableRow  android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="10dp" android:gravity="center" android:paddingLeft="5dp" android:paddingRight="5dp">-->
        <!--<Button-->
            <!--android:id="@+id/login_button"-->
            <!--android:layout_weight="1"-->
            <!--android:text="Login"-->
            <!--android:textColor="@color/wallet_bright_foreground_holo_dark"-->
            <!--android:textSize="30sp"-->
            <!--android:textStyle="bold"-->
            <!--android:background="@drawable/roundbutton"/>-->
    <!--</TableRow>-->
    <TableRow  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" android:gravity="center"
        android:paddingLeft="5dp" android:paddingRight="5dp">

        <Button
            android:id="@+id/fill_data"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="Autofill Credentials"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="Sign In"
            android:textAlignment="gravity"
            android:textColor="#F5F5F5"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>



</TableLayout>